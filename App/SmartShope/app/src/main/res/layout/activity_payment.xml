<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Payment">


    <Button
        android:id="@+id/btn_amount_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:text="Payment" />

    <ImageView
        android:id="@+id/pay_img_logo_cart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/cards" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/pay_edt_cardno_cart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/cust_edt"
                android:hint="Card Number"
                android:inputType="number"
                android:maxLength="12" />

            <EditText
                android:id="@+id/pay_edt_cvv_cart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/cust_edt"
                android:hint="CVV"
                android:inputType="number"
                android:maxLength="3" />

            <EditText
                android:id="@+id/pay_edt_name_cart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/cust_edt"
                android:ems="10"
                android:hint="Name on Card"
                android:inputType="textPersonName"
                android:visibility="gone" />

            <EditText
                android:id="@+id/pay_edt_pin_cart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/cust_edt"
                android:ems="10"
                android:hint="PIN"
                android:inputType="numberPassword"
                android:maxLength="4" />

            <EditText
                android:id="@+id/pay_edt_balance"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/cust_edt"
                android:hint=" Balance"
                android:inputType="text"
                android:maxLength="4" />

            <Button
                android:id="@+id/btn_payment_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary"
                android:text="Payment"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>